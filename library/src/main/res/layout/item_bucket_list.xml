<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/base80dp"
        android:layout_height="@dimen/base80dp"
        android:layout_margin="@dimen/base10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/seat" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_marginStart="@dimen/base10dp"
        android:layout_marginTop="@dimen/base5dp"
        android:gravity="center_vertical"
        android:text="相册名称"
        android:textColor="@color/text_black"
        android:textSize="@dimen/base18sp"
        app:layout_constraintLeft_toRightOf="@+id/cover"
        app:layout_constraintTop_toTopOf="@+id/cover" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base5dp"
        android:gravity="center_vertical"
        android:text="0张"
        android:textColor="@color/text_black"
        android:textSize="@dimen/base16sp"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />
</android.support.constraint.ConstraintLayout>