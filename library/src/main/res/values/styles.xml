<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JLoading">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@color/jld_bg_color</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 全屏显示对话框的样式 -->
    <style name="FullscreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="bigImage" parent="AppThemeBase" />

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/base50dp</item>
        <item name="android:maxWidth">@dimen/base50dp</item>
        <item name="android:width">@dimen/base50dp</item>
        <item name="android:paddingBottom">@dimen/base15dp</item>
        <item name="android:paddingTop">@dimen/base15dp</item>

        <item name="android:scaleType">centerInside</item>
    </style>
    <!--<item name="android:paddingTop">@dimen/base15dp</item>
        <item name="android:paddingLeft">@dimen/base10dp</item>
        <item name="android:paddingEnd">@dimen/base10dp</item>
        <item name="android:paddingStart">@dimen/base10dp</item>
        <item name="android:paddingRight">@dimen/base10dp</item>
        <item name="android:paddingBottom">@dimen/base15dp</item>-->
    <style name="ActionBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/base16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>