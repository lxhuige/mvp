<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JLoading">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@color/jld_bg_color</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 全屏显示对话框的样式 -->
    <style name="FullscreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bigImage" parent="AppThemeBase" />
</resources>